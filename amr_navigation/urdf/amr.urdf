<?xml version="1.0"?>
<robot name="amr">
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>

    <material name="green">
        <color rgba="0 0.6 0 1" />
    </material>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    
    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />

            <material name="green" />
        </visual>

        <collision>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1"/>
        </collision>

        <inertial>
            <mass value="10.0"/>
            <origin xyz="0 0 0.1"/>
            <inertia ixx="0.166"
                iyy="0.333"
                izz="0.416"
                ixy="0.0"
                ixz="0.0"
                iyz="0.0"/>
        </inertial>

    </link>

    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius ="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />

            <material name="white" />
        </visual>
    </link>

    <link name="imu_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />

            <material name="white" />
        </visual>
    </link>

    <link name="caster_wheel1">
        <visual>
            <geometry>
                <sphere radius ="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />

            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <link name="caster_wheel2">
        <visual>
            <geometry>
                <sphere radius ="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />

            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>

    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius ="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />

            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>

        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius ="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />

            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>

        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <gazebo reference="left_wheel">
        <surface>
            <friction>
            <ode>
                <mu>5.0</mu>
                <mu2>5.0</mu2>
            </ode>
            </friction>
        </surface>
    </gazebo>

    <gazebo reference="right_wheel">
        <surface>
            <friction>
            <ode>
                <mu>5.0</mu>
                <mu2>5.0</mu2>
            </ode>
            </friction>
        </surface>
    </gazebo>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
    </joint>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar" />
        <origin xyz="0 0 0.225" rpy="0 0 0" />
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <dynamics damping="0.2" friction="0.1"/>
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <dynamics damping="0.2" friction="0.1"/>
    </joint> 

    <joint name="base_caster_wheel1_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel1" />
        <origin xyz="0.2 0 -0.0495" rpy="0 0 0" />
    </joint>

    <joint name="base_caster_wheel2_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel2" />
        <origin xyz="-0.2 0 -0.0495" rpy="0 0 0" />
    </joint>
    
    <joint name="base_imu_link_joint" type="fixed">
        <parent link="base_link" />
        <child link="imu_link" />
        <origin xyz="0.2 0 0.2005" rpy="0 0 0" />
    </joint>

<!-- PLUGINS -->

  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so"
            name="ignition::gazebo::systems::DiffDrive">

        <left_joint>base_left_wheel_joint</left_joint>
        <right_joint>base_right_wheel_joint</right_joint>

        <wheel_separation>0.45</wheel_separation>
        <wheel_radius>0.1</wheel_radius>

        <topic>cmd_vel</topic>

        <odometry_topic>odom</odometry_topic>
        <odometry_frame>odom</odometry_frame>
        <robot_base_frame>base_footprint</robot_base_frame>
        <publish_tf>true</publish_tf>

        <max_linear_velocity>2.0</max_linear_velocity>
        <max_angular_velocity>3.0</max_angular_velocity>

        <max_linear_acceleration>0.3</max_linear_acceleration>
        <max_angular_acceleration>2.0</max_angular_acceleration>

    </plugin>
  </gazebo>


  <gazebo>
    <plugin filename="libignition-gazebo-joint-state-publisher-system.so"
            name="ignition::gazebo::systems::JointStatePublisher">
      <topic>/joint_states</topic>
    </plugin>
  </gazebo>


  <gazebo reference="lidar">
    <sensor name="lidar_sensor" type="gpu_lidar">
      <update_rate>10</update_rate>
      <topic>/scan</topic>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
        </range>
      </ray>
      <always_on>true</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <topic>imu</topic>
    </sensor>
    <plugin filename="libignition-gazebo-imu-system.so"
    name="ignition::gazebo::systems::Imu">
    </plugin>
  </gazebo>

</robot>